<!DOCTYPE html>
<html>
  <head>
    <title>GLASTube</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>  
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <div class="col">
            <a class="navbar-brand" href="/" style="color: #B00100;"><strong>GLASTube</strong></a>
          </div>
          <div class="col">
            <form class="d-flex">
              <input class="form-inline" size="60" type="search" placeholder="Search video" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
          <div class="col">
            <%= render 'include/auth/auth_header' %>
          </div>
        </div>
      </nav>
      <hr> 
    <div class="jumbotron vertical-center">
      <div class="container">
        <%= render 'include/main/notification' %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
