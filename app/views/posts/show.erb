<%#= link_to 'All posts', posts_path %>
<h1><%= @post.title %></h1>
<% if user_signed_in? and current_user.id == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' %>
  |
  <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
  <%#=current_user.id %>
<% end %>

<%= video_tag(@post.video.url, alt: 'Video', controls: true) if @post.video? %>

<h2><%= link_to  @user.email, user_posts_path(@post.user_id) %></h2>

<div class="card" >
  <div class="card-block">
    <p class="card-text"><%= @post.body %></p>
  </div>
</div>
